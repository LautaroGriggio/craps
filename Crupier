package juego;

import java.util.ArrayList;

public class Crupier {
 
	private ArrayList<Dado> dados = new ArrayList<>(); 
		
	public Crupier(int cantidadDados) {
		for (int i = 0; i < cantidadDados; i++) {
			
			dados.add(new Dado());
		}
	}
		
	public int tirarDados() {
		int suma = 0;
		for (Dado d : dados) {
			d.tirarDado();
			suma = suma + d.getValor();
		}
		return suma;
	}
	
	
}
